@model Profile.Models.User

@{
    ViewBag.Title = "EditPassword";
    int user_id = int.Parse(Session["user_id"].ToString());
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditPassword</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <h2 style="padding-top: 10px; padding-left: 8px">Edit</h2>

    @if (Model.user_id == int.Parse(Session["user_id"].ToString()))
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="padding-top: 8px; padding-left: 8px">Password</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.user_id)

                <div class="form-group">
                    <label class="control-label col-md-2">Current password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", id = "current_password", Name = "current_password", type = "password", Value = "" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">New password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", id = "new_password", Name = "new_password", type = "password", Value = "" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Confirm password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", id = "confirm_password", Name = "confirm_password", type = "password", Value = "" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }
    else
    {
       
            Response.Redirect("~/Login/Index");
       
    }
    <div>
        @Html.ActionLink("Back to Profile", "Details", new { id = user_id })
    </div>
</body>
</html>
